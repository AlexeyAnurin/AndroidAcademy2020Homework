<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movieTitle">
        <item name="fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#ECECEC</item>
    </style>

    <style name="tagline">
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF3466</item>
    </style>

    <style name="reviews">
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6D6D80</item>
    </style>

    <style name="storyLine">
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="storyLineTitle">
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ECECEC</item>
    </style>

    <style name="actorNames">
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#D8D8D8</item>
    </style>

</resources>